name: Deploy App

on:
  push:
    branches:
      - main  # كل مرة حد يعمل push على main هيشتغل workflow

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # 1) جلب الكود من GitHub
      - name: Checkout repo
        uses: actions/checkout@v4

      # 2) إعداد Python (لو تطبيقك بايثون)
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      # 3) تثبيت المتطلبات
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # 4) تشغيل السكربت مع Secret
      - name: Run App
        env:
          API_KEY: ${{ secrets.MY_API_KEY }}   # <--- هنا بنضيف الـ Secret للبيئة
        run: |
          python app.py
